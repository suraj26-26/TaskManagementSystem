<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Suraj's Task Pro</title>
     <link rel="icon" type="image/x-icon" href="/public/icon.ico">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link rel="stylesheet" href="style.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <h1>Suraj's Task pro</h1>
    <p>Your Hub for Ultimate Task Management</p>
    <div class="container">
        <h2>Login</h2>
        <div id="loginError" style="color: red;"></div>
        <form id="loginForm">
            <input type="text" name="username" id="loginUsername" placeholder="Username" required><br>
            <input type="password" name="password" id="loginPassword" placeholder="Password" required><br>
            <button type="submit">Login</button>
        </form>
        <p>Already have an account? <a href="/register">Register Here</a></p>
    </div>
<script>
    console.log("Login script loaded");

    document.addEventListener('DOMContentLoaded', function () {
        console.log("DOM fully loaded");

        // Show logout success message if redirected after logout
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('loggedOut') === 'true') {
            Swal.fire({
                icon: 'info',
                title: 'Logged Out',
                text: 'You have been logged out successfully!',
                confirmButtonText: 'OK'
            });
        }

        const loginForm = document.getElementById('loginForm');
        if (!loginForm) {
            console.error("loginForm not found!");
            return;
        }

        console.log("Attaching submit listener...");

        loginForm.addEventListener('submit', async function (event) {
            console.log("Login form submitted");
            event.preventDefault();

            const username = document.getElementById('loginUsername').value;
            const password = document.getElementById('loginPassword').value;
            const loginError = document.getElementById('loginError');

            try {
                const response = await fetch('/login', {
                    method: 'POST',
                    headers: { 'Content-type': 'application/json' },
                    body: JSON.stringify({ username, password })
                });

                if (!response.ok) {
                    const errorText = await response.text();
                    throw new Error(errorText);
                }

                Swal.fire({
                    icon: 'success',
                    title: 'Login!',
                    text: 'User logged in successfully!',
                    confirmButtonText: 'OK'
                }).then(() => {
                    window.location.href = '/';
                });

            } catch (error) {
                console.error("Login error:", error.message);
                loginError.textContent = error.message;
            }
        });
    });
</script>



</body>
</html>